<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <h1> Welcome to the Camp Grounds</h1>
        <p>These are the best Camp Grounds across the World!! Enjoy your time!!</p>
        <a class="btn btn-primary btn-lg" href="/">Click to see the Home Page</a>
        <a class="btn btn-primary btn-lg" href="/campground/new">Click to add new campground</a>
    </div>

    <div class="row">
         <div class="col-lg-12">
             <h4>These are the most popular Camp Sites!!</h4>
         </div>
     
        <% campgrounds.forEach(function(camp){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp['image']%>">
                </div>
                <div class="caption">
                    <h4><strong><%= camp['name']%></strong> by <%= camp['author']['username']%></h4>
                    <a href="/campground/<%= camp['_id']%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        <% })%>
            
    </div>

</div>
<%- include("../partials/footer") %>