<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;"> Add a new Comment for <%=camp['name']%> </h1>
        <form action="/campground/<%=camp._id%>/comments" method="post">
           <div style="width:30%; margin: 25px auto;">
                <div class="form-group">
                 <input class="form-control" type="text" name="comment[text]" placeholder="text"/>
                 </div>
                 <div class="form-group">
                 <input class="form-control" type="text" name="comment[author]" placeholder="author"/>
                 </div>
                 <div class="form-group">
                 <input class="btn btn-primary btn-lg btn-block" type="submit" value="Submit"/>
                 </div>
           </div>
        </form>
    </div>
 </div>
 <%- include("../partials/footer") %>